extend layout

block content
	.container
		!= messages()
		form(action="/login" method="post")
			h2.form-signin-heading Please sign in to Magination
			div.form-group
				label.sr-only(for='inputUsername') Username
				input#inputUsername.form-control(type='text', name='username', placeholder='Username', required='', autofocus='')
			div.form-group
				label.sr-only(for='inputPassword') Password
				input#inputPassword.form-control(type='password', name='password', placeholder='Password', data-minlength="6", required='')
			div.form-group
				button.btn.btn-lg.btn-primary.btn-block(type="submit" value="Submit") Sign in
