extend layout

block content
	.container
		!= messages()
		form(name="register", action="/register", method="post", data-toggle="validator", role="form")
			h2.form-signing-heading Register
			div.form-group
				label(for='username', style='white-space:pre;')
					| Username
				input#username.form-control(name='username', type='text', required='', autofocus='')
				div(class='help-block with-errors')
			div.form-group
				label(for='email', style='white-space:pre;')
					| Email
				input#email.form-control(name='email', type='email', required='')
				div(class='help-block with-errors')
			div.form-group
				label(for='password') Password
				input#password.form-control(name='password' type='password', placeholder='Password', data-minlength="7", required='')
				div(class='help-block with-errors')
			div.form-group
				label(for='passwordRepeat') Confirm password
				input#passwordRepeat.form-control(name='passwordRepeat' type='password', placeholder='Repeat password', data-match='#password' data-match-error='Ops, the passwords do not match' required='')
				div(class='help-block with-errors')
			div.form-group
				button.btn.btn-lg.btn-primary.btn-block(type='submit', value='register') Register
